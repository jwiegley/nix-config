#!/bin/bash

NIXPKGS='(import <darwin> {}).pkgs'
PKGNAME=$(basename "$PWD")
START="$PWD"

while [[ "$PWD" != "/"                                          \
      && $(find . -maxdepth 1 -name '*.cabal' | wc -l) == "0"   \
      && ! -f default.nix                                       \
      && ! -d .git && ! -f .git                                 \
      ]]; do
    cd ..
done

if [[ "$PWD" = "/" ]]; then
    echo "Error: Could not find default.nix or .git"
    exit 1
fi

if [[ -f default.nix ]]; then
    exec nix-build "$@"
else
    exec nix-build -E "$NIXPKGS.packageDrv null $PWD {}" "$@"
fi
