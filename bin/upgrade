#!/usr/bin/env bash

set -e

case $1 in
    vulcan)
        u vulcan upgrade sign copy
        # notify "Nix on Vulcan upgraded"
        ;;

    hermes)
        u hermes upgrade-tasks check
        (cd ~/src/comparable;                           \
         source <(direnv apply_dump .envrc.cache);      \
         cargo update;                                  \
         cargo build;                                   \
         cargo test)
        (cd ~/src/org-jw;                               \
         source <(direnv apply_dump .envrc.cache);      \
         cabal v2-update;                               \
         cabal v2-build all)
        # notify "Nix on Hermes upgraded"
        ;;

    athena)
        u switch check
        eval "$(/opt/homebrew/bin/brew shellenv)"
	brew update
	brew upgrade --greedy
        # notify "Nix on Athena upgraded"
        exit 0
        ;;

    *)
        echo "Unrecognized hostname: $1"
        exit 1
        ;;
esac

(
    cd ~/src/category-theory
    source <(direnv apply_dump .envrc.cache)
    make clean
    make
)

(
    cd ~/src/ltl/coq
    source <(direnv apply_dump .envrc.cache)
    make clean
    make
)

(
    cd ~/src/notes/haskell
    source <(direnv apply_dump .envrc.cache)
)

(
    cd ~/src/org-jw
    source <(direnv apply_dump .envrc.cache)
    cabal v2-update
    cabal v2-build all
)

(
    cd ~/src/renamer
    source <(direnv apply_dump .envrc.cache)
    cabal v2-update
    cabal v2-build
)

(
    cd ~/src/simple-amount
    source <(direnv apply_dump .envrc.cache)
    cabal v2-update
    cabal v2-build
)

(
    cd ~/src/three-partition
    source <(direnv apply_dump .envrc.cache)
    cabal v2-update
    cabal v2-build
)

(
    cd ~/src/trade-journal
    source <(direnv apply_dump .envrc.cache)
    cabal v2-update
    cabal v2-build
)

(
    cd ~/src/comparable
    source <(direnv apply_dump .envrc.cache)
    cargo update
    cargo build
    cargo test
    cargo doc
    cargo clippy
)
