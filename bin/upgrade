#!/usr/bin/env bash

case $1 in
    vulcan)
        u vulcan upgrade sign
        # notify "Nix on Vulcan upgraded"
        ;;

    hera)
        u hera upgrade sign copy
        # notify "Nix on Hera upgraded"
        ;;

    hermes)
        u hermes upgrade-tasks check
        (cd ~/src/comparable;                           \
         source <(direnv apply_dump .envrc.cache);      \
         cargo update;                                  \
         cargo build;                                   \
         cargo test)
        (cd ~/src/org-jw;                               \
         source <(direnv apply_dump .envrc.cache);      \
         cabal v2-update;                               \
         cabal v2-build all)
        # notify "Nix on Hermes upgraded"
        ;;

    clio)
        u clio upgrade-tasks check
        (cd ~/src/comparable;                           \
         source <(direnv apply_dump .envrc.cache);      \
         cargo update;                                  \
         cargo build;                                   \
         cargo test)
        (cd ~/src/org-jw;                               \
         source <(direnv apply_dump .envrc.cache);      \
         cabal v2-update;                               \
         cabal v2-build all)
        # notify "Nix on Clio upgraded"
        ;;

    athena)
        u switch check
        eval "$(/opt/homebrew/bin/brew shellenv)"
      brew update
      brew upgrade --greedy
        # notify "Nix on Athena upgraded"
        exit 0
        ;;

    *)
        echo "Unrecognized hostname: $1"
        exit 1
        ;;
esac

(
    cd ~/src/category-theory
    source .envrc
    make clean
    make
)

(
    cd ~/src/ltl/coq
    source .envrc
    make clean
    make
)

(
    cd ~/src/notes/haskell
    source .envrc
    cabal v2-update
    cabal v2-configure --disable-tests --disable-profiling --disable-executable-profiling
)

(
    cd ~/src/org-jw
    source .envrc
    cabal v2-update
    cabal v2-configure --enable-tests --enable-profiling --enable-executable-profiling
    cabal v2-build all
)

(
    cd ~/src/renamer
    source .envrc
    cabal v2-update
    cabal v2-configure --enable-tests --enable-profiling --enable-executable-profiling
    cabal v2-build
)

(
    cd ~/src/simple-amount
    source .envrc
    cabal v2-update
    cabal v2-configure --enable-tests --disable-profiling --disable-executable-profiling
    cabal v2-build
)

(
    cd ~/src/three-partition
    source .envrc
    cabal v2-update
    cabal v2-configure --enable-tests --disable-profiling --disable-executable-profiling
    cabal v2-build
)

(
    cd ~/src/trade-journal
    source .envrc
    cabal v2-update
    cabal v2-configure --enable-tests --disable-profiling --disable-executable-profiling
    cabal v2-build
)

(
    cd ~/src/comparable
    source .envrc
    cargo update
    cargo build
    cargo test
    cargo doc
    cargo clippy
)
